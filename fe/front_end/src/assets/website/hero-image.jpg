

(function() {
    const canvas = document.createElement('canvas');
    const ctx = canvas.getContext('2d');

    canvas.width = 1200;
    canvas.height = 600;

    // Background color
    ctx.fillStyle = '#333';
    ctx.fillRect(0, 0, canvas.width, canvas.height);

    // Text
    ctx.font = 'bold 70px Arial';
    ctx.fillStyle = '#fff';
    ctx.textAlign = 'center';
    ctx.textBaseline = 'middle';
    ctx.fillText('Welcome to Our Bookstore', canvas.width / 2, canvas.height / 2 - 40);

    ctx.font = '30px Arial';
    ctx.fillText('Discover Your Next Favorite Book', canvas.width / 2, canvas.height / 2 + 30);

    // Convert to image and save
    const img = new Image();
    img.src = canvas.toDataURL('image/jpeg');

    // This part is for saving the image in a browser environment,
    // which won't work directly in a file write operation.
    // For a real scenario, you'd need a server-side script or
    // a different approach to generate and save image files.
    // For now, I'm providing a base64 encoded image content directly.
})();

